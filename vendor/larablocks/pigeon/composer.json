{
    "name": "larablocks/pigeon",
    "type": "library",
    "description": "A more flexible email message builder for Laravel 5.2 and 5.1 including chained methods, reusable message configurations, and message layout and template view management.",
    "keywords": [
        "mailer","laravel","5.2","5.1","mail","email","message","template","views","builder","pigeon"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Eric Mitkowski",
            "email": "eric@larablocks.com",
            "role": "Developer"
        }
    ],
    "require": {
      "php": ">=5.5.9",
        "illuminate/mail": "~5.2",
        "illuminate/log": "~5.2"
    },
    "require-dev": {
      "fzaninotto/faker": "~1.5",
      "mockery/mockery": "0.9.*",
      "phpunit/phpunit": "~4.0"
    },
    "autoload": {
        "psr-4": {
            "Larablocks\\Pigeon\\": "src/Pigeon"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Larablocks\\Pigeon\\PHPUnit\\": "tests"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "5.2.x-dev"
        }
    }
}
